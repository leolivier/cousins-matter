	"version": "0.2.0",
	"configurations": [
		{
			"name": "Django runserver Debugger",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"runserver"
			],
			"django": true,
			"autoStartBrowser": false,
			"justMyCode": false
		},
		{
			"name": "Django qcluster Debugger",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"qcluster"
			],
			"django": true,
			"autoStartBrowser": false,
			"justMyCode": false
		},
		{
			"name": "Django Test Debugger",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"test",
				"--failfast",
				"-v",
				"2",
				"members.tests.tests_import_export.TestMemberImport.test_create_import_manager_activation"
			],
			"django": true,
			"autoStartBrowser": false,
			"justMyCode": false
		},
		{
			"name": "Docker Django Debug",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"python": {
				"pathMappings": [
					{
						"localRoot": "${workspaceFolder}",
						"remoteRoot": "/app"
					}
				],
				"projectType": "django"
			}
		},
		{
      "name": "Python: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ],
      "justMyCode": false
    },
		{
			"name": "Django Migrate Debugger",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"migrate"
			],
			"django": true,
			"autoStartBrowser": false,
			"justMyCode": false
		},
	]
}